!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!!!                       M O R P H O T A C T I C S                         !!!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

LEXICON Root

NounRoot ;


LEXICON RegNounDcInfl

%<n%>%<dc%>: NounInfl-NonAug ;


LEXICON RegNounDcInfl-Aug

%<n%>%<dc%>: NounInfl-Aug ;


LEXICON RegNounEndingAbs
:%>%{a%}ш # ;
:%>ий # ;

LEXICON RegNounEndingErg
:%>о # ;
:%>ac # ;

LEXICON RegNounEndingGen
:%>ийн # ;
:%>ин # ;

LEXICON NounInfl-NonAug
%<abs%>%<sg%>: # ;

LEXICON NounInfl-Aug
%<abs%>%<pl%>: RegNounEngingAbs ;
%<erg%>%<sg%>: RegNounEndingErg ;
%<erg%>%<pl%>:%>ашa # ;
%<gen%>%<sg%>:н # ;
%<gen%>%<pl%>: RegNounEndingGen ;


!LEXICON RegNoun


!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!
!!!                          L E X I C O N                                  !!!
!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!

LEXICON NounRoot

!house:house RegNounInfl ; ! A noun
кор:кор RegNounDcInfl ; ! "(gloss)"

гала:гала RegNounDcInfl ; ! ""
гала:галн%{a%} RegNounDcInfl-Aug ; ! ""


